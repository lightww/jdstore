<div class="row">


  <% @products.each do |product| %>
    <div class="col-xs-12 col-md-3 thumbnail" style="margin-bottom:20px;">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <div class="caption text-center">
        <div class="page-header">
    <h4><%= product.title %>  <small><strong>￥ <%= product.price %></strong></small></h4>
  </div>
        <p><%= link_to("详情",product_path(product),class:"btn btn-primary") %><%= link_to("加入购物车",add_to_cart_product_path(product),:method=>:post,class:"btn btn-danger") %>  </p>
      </div>
    </div>
  <% end %>
  <br>
</div>

