<div class="panel  panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">New Product </h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for [:admin, @product] do |f| %>

      <div class="group " placeholder="影片名称">
        <%= f.input :title  %>
      </div>

      <div class="group">
        <%= f.input :description %>
      </div>

      <div class="group">
        <%= f.input :quantity %>
      </div>

      <div class="group">
        <%= f.input :price %>
      </div>

      <div class="group">
       <%= f.input :image, as: :file %>
     </div>

      <%= f.submit "Submit", class:"btn btn-info", data: { disable_with: "Submitting..." } %>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  autosize($('textarea'));
  autosize($('#product_title'));

</script>
